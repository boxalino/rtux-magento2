<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Boxalino\RealTimeUserExperience\Block\ApiNarrative" name="rtux_api_narrative">
                <arguments>
                    <argument name="widget" xsi:type="string">home</argument>
                    <argument name="hitCount" xsi:type="string">10</argument>
                    <argument name="groupBy" xsi:type="string">products_group_id</argument>
                    <argument name="returnFields" xsi:type="array">
                        <item name="id" xsi:type="string">id</item>
                        <item name="price" xsi:type="string">discountedPrice</item>
                        <item name="title" xsi:type="string">title</item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
